{
  "name": "cortex-app",
  "version": "0.1.0",
  "description": "Cortex - A native Electron application for knowledge management",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "stylelint \"src/renderer/src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/renderer/src/**/*.css\" --fix",
    "validate:tokens": "node scripts/validate-design-tokens.js",
    "validate:accessibility": "node scripts/validate-accessibility.js",
    "precommit": "npm run type-check",
    "prepare": "husky",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "setup": "node scripts/setup-neo4j.js",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-better-tailwindcss": "^4.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@langchain/core": "^1.1.16",
    "@langchain/langgraph": "^1.1.1",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.0",
    "@langchain/ollama": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "langchain": "^1.2.11",
    "lucide": "^0.562.0",
    "lucide-react": "^0.563.0",
    "neo4j-driver": "^6.0.1",
    "ollama": "^0.6.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  }
}
