{
  "*.{ts,tsx,js,jsx,json}": ["prettier --write"],
  "*.{ts,tsx}": [
    "eslint --fix",
    "node scripts/validate-design-tokens.js",
    "node scripts/validate-accessibility.js",
    "node scripts/validate-transitions.js",
    "node scripts/validate-inline-styles.js"
  ],
  "*.css": ["prettier --write", "stylelint --fix", "node scripts/validate-transitions.js"],
  "**/*.{ts,tsx}": ["bash -c 'npm run type-check'"]
}
